<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <!-- Connection pool  -->
    
    <description>MySQL</description>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/webproject</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Parameters of context  -->

    <context-param>
        <param-name>userImplementation</param-name>
        <param-value>DATABASE</param-value>
    </context-param>
    <context-param>
        <param-name>taskImplementation</param-name>
        <param-value>DATABASE</param-value>
    </context-param>
    <context-param>
        <param-name>filesDirectory</param-name>
        <param-value>C:\WebServerFiles</param-value>
    </context-param>

    <!-- JSP  -->

    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/view/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/view/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/view/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/view/jsp/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


    <!-- SERVLET  -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.authentication.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.authentication.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ExitServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.authentication.ExitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExitServlet</servlet-name>
        <url-pattern>/ExitServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintTaskServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.get.PrintTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintTaskServlet</servlet-name>
        <url-pattern>/PrintTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.task.AddTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/AddTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadFileServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.file.DownloadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadFileServlet</servlet-name>
        <url-pattern>/DownloadFileServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.file.UploadFileServlet</servlet-class>
        <multipart-config>
            <!-- 52MB max -->
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/UploadFileServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MoveTaskServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.task.MoveTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MoveTaskServlet</servlet-name>
        <url-pattern>/MoveTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangeTaskServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.task.ChangeTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeTaskServlet</servlet-name>
        <url-pattern>/ChangeTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.task.DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/DeleteTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFileServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.control.post.file.DeleteFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFileServlet</servlet-name>
        <url-pattern>/DeleteFileServlet</url-pattern>
    </servlet-mapping>



    <!-- Filters  -->

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.user.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CookieValidationFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.user.CookieValidationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CookieValidationFilter</filter-name>
        <url-pattern>/index</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AddTaskFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.task.AddTaskFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AddTaskFilter</filter-name>
        <url-pattern>/AddTaskServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.user.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/LoginServlet</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>RegistrationFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.user.RegistrationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegistrationFilter</filter-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>DeleteTaskFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.task.DeleteTaskFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DeleteTaskFilter</filter-name>
        <url-pattern>/DeleteTaskServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UploadFileFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.file.UploadFileFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UploadFileFilter</filter-name>
        <url-pattern>/UploadFileServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ChangeTaskFilter</filter-name>
        <filter-class>by.gsu.epamlab.control.filters.task.ChangeTaskFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ChangeTaskFilter</filter-name>
        <url-pattern>/ChangeTaskFilter</url-pattern>
    </filter-mapping>


    <!-- Listeners -->

    <listener>
        <listener-class>by.gsu.epamlab.control.listeners.ApplicationContextParameter</listener-class>
    </listener>


    <!-- Error page  -->

    <error-page>
        <error-code>500</error-code>
        <location>/view/jsp/jspchunks/errorPage.jsp</location>
    </error-page>



</web-app>